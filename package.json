{
  "name": "nodejs-boilerplate",
  "version": "0.1.0",
  "description": "NodeJS boilerplate starting project",
  "main": "./.build/main.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf .build .coverage",
    "test": "jest",
    "test:w": "jest --watch",
    "typecheck": "tsc --noemit",
    "typecheck:w": "tsc --noemit --watch",
    "tc": "npm run typecheck",
    "tc:w": "npm run typecheck:w",
    "start": "node ."
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@eslint/migrate-config": "^1.5.2",
    "@swc/core": "^1.12.11",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "author": "Federico Terraneo",
  "license": "ISC"
}
